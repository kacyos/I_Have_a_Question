<!DOCTYPE html>
<html lang="pt-BR">
  <%- include("partials/header.ejs")%>
  <body>
    <%- include("partials/navbar.ejs")%>
    <div class="container mt-5">
      <div class="card">
        <div class="card-header">
          <h3 class="question_title">Realizar pergunta</h3>
        </div>

        <div class="card-body">
          <form method="post" action="/save">
            <label>Título</label>
            <input
              name="title"
              class="form-control mb-4"
              type="text"
              placeholder="Título"
            />
            <label>Descrição</label>
            <textarea
              name="description"
              class="form-control mb-4"
              placeholder="Descreva sua pergunta."
            ></textarea>
            <button type="submit" class="btn btn-primary">Perguntar</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
